<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/apartment_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:tint="#3949AB"
        app:srcCompat="@drawable/ic_profile" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/apartment_image"
        android:drawablePadding="@dimen/padding"
        android:padding="@dimen/padding"
        android:text="Jonas"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/apartment_image"
        android:layout_below="@+id/name"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="@dimen/padding"
        android:padding="@dimen/padding"
        android:text="StudentÅ³ g. 60, Kaunas"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <View
        android:id="@+id/divider1"
        style="@style/Divider"
        android:layout_below="@id/apartment_image"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/complaint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:drawableLeft="@drawable/ic_info"
        android:drawablePadding="@dimen/padding"
        android:padding="@dimen/padding"
        android:text="Neveikia vandentiekis"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <View
        android:id="@+id/divider2"
        style="@style/Divider"
        android:layout_below="@+id/price" />



</RelativeLayout>